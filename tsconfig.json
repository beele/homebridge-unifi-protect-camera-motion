{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2018",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "preserveSymlinks": true,
        "strictFunctionTypes": false,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
